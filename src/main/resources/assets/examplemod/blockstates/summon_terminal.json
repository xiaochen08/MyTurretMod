{
  "multipart": [
    { "when": { "facing": "north", "lit": "false" }, "apply": { "model": "examplemod:block/summon_terminal" } },
    { "when": { "facing": "east", "lit": "false" }, "apply": { "model": "examplemod:block/summon_terminal", "y": 90 } },
    { "when": { "facing": "south", "lit": "false" }, "apply": { "model": "examplemod:block/summon_terminal", "y": 180 } },
    { "when": { "facing": "west", "lit": "false" }, "apply": { "model": "examplemod:block/summon_terminal", "y": 270 } },

    { "when": { "facing": "north", "lit": "true" }, "apply": { "model": "examplemod:block/summon_terminal_lit" } },
    { "when": { "facing": "east", "lit": "true" }, "apply": { "model": "examplemod:block/summon_terminal_lit", "y": 90 } },
    { "when": { "facing": "south", "lit": "true" }, "apply": { "model": "examplemod:block/summon_terminal_lit", "y": 180 } },
    { "when": { "facing": "west", "lit": "true" }, "apply": { "model": "examplemod:block/summon_terminal_lit", "y": 270 } }
  ]
}
